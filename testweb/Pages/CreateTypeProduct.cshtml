@page
@model testweb.Pages.CreateTypeProductModel
@{ }

<h2 class="text-center">Добавление каталога</h2>

<div asp-validation-summary="All"></div>
<form class="text-center area_form" method="POST">
    <div>
        <label>Категория:</label>
        <select class="property_field" asp-for="Type.Parent.Id">
            <option value=@(-1)>Корень</option>
            @foreach (var item in Model.tree)
            {
                if (item.Id == Model.IdParent)
                {
                    <option value=@item.Id selected>@item.Name</option> 
                }
                else
                {
                    <option value=@item.Id>@item.Name</option>

                }

            }
        </select>
    </div>

    <div>
        <label>Название</label>
        <input class="property_field" asp-for="Type.Name" required />
    </div>
    <div>
        <button class="btn-add" type="submit">Добавить</button>
    </div>
</form>